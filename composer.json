{
  "name": "dazza-dev/laravel-batch-validation",
  "description": "Batch validate arrays in Laravel and optimize database unique rules using whereIn to avoid N+1 query issues.",
  "keywords": [
    "batch",
    "validation",
    "laravel"
  ],
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.2",
    "laravel/framework": "^11.0|^12.0"
  },
  "require-dev": {
    "larastan/larastan": "^3.1",
    "laravel/pint": "^1.18",
    "orchestra/testbench": "^9.14|^10.0"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Andres Daza",
      "email": "adaza90@outlook.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "DazzaDev\\BatchValidation\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DazzaDev\\BatchValidation\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "DazzaDev\\BatchValidation\\BatchValidationServiceProvider"
      ]
    }
  }
}
